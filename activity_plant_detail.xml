
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/tuple_image"> <!-- Set the background image here -->

    <!-- Back Button (Top-left) -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:background="@color/design_default_color_secondary"
        android:textColor="#FFFFFF"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <!-- Plant Image -->
    <ImageView
        android:id="@+id/plantImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/backButton"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop" />

    <!-- Plant Name -->
    <TextView
        android:id="@+id/plantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plant Name"
        android:textSize="24sp"
        android:textColor="#333333"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/plantImage"
        android:layout_marginTop="16dp" />

    <!-- Plant Description -->
    <TextView
        android:id="@+id/plantDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a description of the plant."
        android:textSize="16sp"
        android:textColor="#666666"
        android:layout_below="@id/plantName"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
